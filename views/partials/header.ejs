<!DOCTYPE html>
<html lang="en" class="transition-colors">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blogg Web App</title>
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/128/3959/3959542.png" type="image/x-icon">
  <link href="/css/output.css" rel="stylesheet" />
  <script>
    // Toggle dark mode
    function toggleDarkMode() {
      const isDark = document.documentElement.classList.toggle('dark');
      localStorage.setItem('dark', isDark);
      updateIcon(isDark);
    }

    // Update icon based on current mode
    function updateIcon(isDark) {
      const sunIcon = document.getElementById('sun-icon');
      const moonIcon = document.getElementById('moon-icon');
      if (isDark) {
        sunIcon.classList.add('hidden');
        moonIcon.classList.remove('hidden');
      } else {
        sunIcon.classList.remove('hidden');
        moonIcon.classList.add('hidden');
      }
    }

    // Auto-load saved mode on other endpoints 
    if (localStorage.getItem('dark') === 'true') {
      document.documentElement.classList.add('dark');
    }
  </script>
</head>
<body class=" bbg-emerald-50 dark:bg-gray-900 text-gray-800 dark:text-gray-100 transition-colors">
  <nav class="bg-white dark:bg-gray-800 shadow p-4 flex justify-between items-center transition-colors">
    <div class="w-2xs gap-2 mr-14 flex items-center">
      <img src="https://cdn-icons-png.flaticon.com/128/4922/4922057.png" class="h-12" alt="blog icon">
      <h1 class="text-2xl font-bold text-indigo-600">Bloggy</h1>
    </div>
    <div class="flex items-center sm:text-lg gap-6">
      <a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-400">Home</a>
      <a href="/about" class="hover:text-indigo-600 dark:hover:text-indigo-400">About</a>
      <a href="/contact" class="hover:text-indigo-600 dark:hover:text-indigo-400">Contact</a>

      <button onclick="toggleDarkMode()" class="p-1 rounded-2xl text-sm hover:bg-gray-100 hover:cursor-pointer dark:hover:bg-gray-700">
        <!-- Sun Icon (shown in light mode) -->
        <svg id="sun-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm text-gray-700 dark:text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <!-- Moon Icon (shown in dark mode) -->
        <svg id="moon-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700 dark:text-gray-300 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    </div>
  </nav>

  <script>
    // Initialize icon state on page load
    document.addEventListener('DOMContentLoaded', function() {
      const isDark = localStorage.getItem('dark') === 'true';
      updateIcon(isDark);
    });
  </script>
</body>
</html>