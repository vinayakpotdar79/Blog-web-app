<%-include("partials/header") %>

<div class="px-6 py-10  min-h-screen transition-colors">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-xl sm:text-3xl font-bold text-gray-800 dark:text-white">Featured Blog Posts</h1>
      <a href="/post" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">+ New Blog</a>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% posts.forEach(post => { %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden transition hover:shadow-lg">
        <img src="<%= post.featuredImage.url %>" alt="<%= post.featuredImage.alt %>" class="w-full h-96 rounded-2xl">
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100"><%= post.title %></h3>
            <p class="text-gray-600 dark:text-gray-300 mt-2"><%= post.metaDescription %></p>
            <div class="mt-4 flex justify-between items-center">
              <a href="/post/<%= post.id %>" class="text-indigo-500 hover:underline">Read More &rarr;</a>
              <div class="flex gap-2">
               <!-- <a href="/edit/<%= post.id %>" class="text-md text-purple-500 hover:text-purple-600">Edit</a>
                <a href="/delete/<%= post.id %>" class="text-md text-red-500 hover:text-red-600">Delete</a> -->
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
