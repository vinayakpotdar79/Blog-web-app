<%-include("partials/header")  %>
  <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
    <section class="mb-12">
      <h1 class="text-4xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">Get In Touch</h1>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8 transition-colors">
        <p class="mb-4">We'd love to hear from you! Whether you have a question about our content, want to contribute, or just want to share feedback, use the form below or our contact information.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors">
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600 dark:text-indigo-400">Contact Form</h2>
          <form action="/message" method="POST" class="space-y-4">
            <div>
              <label for="name" class="block mb-1">Name</label>
              <input type="text" name="name" id="name" class="w-full px-3 py-2 border rounded dark:bg-gray-700 dark:border-gray-600">
            </div>
            <div>
              <label for="email" class="block mb-1">Email</label>
              <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded dark:bg-gray-700 dark:border-gray-600">
            </div>
            <div>
              <label for="message" class="block mb-1">Message</label>
              <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border rounded dark:bg-gray-700 dark:border-gray-600"></textarea>
            </div>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition-colors">Send Message</button>
          </form>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors">
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600 dark:text-indigo-400">Other Ways to Connect</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-medium">Email</h3>
              <p class="text-gray-600 dark:text-gray-400">hello@bloggy.com</p>
            </div>
            <div>
              <h3 class="font-medium">Phone</h3>
              <p class="text-gray-600 dark:text-gray-400">+1 (555) 123-4567</p>
            </div>
            <div>
              <h3 class="font-medium">Office</h3>
              <p class="text-gray-600 dark:text-gray-400">123 Knowledge Lane<br>Boston, MA 02108</p>
            </div>
            <div class="pt-4">
              <h3 class="font-medium mb-2">Follow Us</h3>
        <div class="flex space-x-4">
                <a href="https://wa.me/919999999999" target="_blank" title="WhatsApp" class="hover:text-green-500">
                  <img src="https://cdn-icons-png.flaticon.com/512/220/220236.png" alt="WhatsApp" class="w-6 h-6">
                </a>
                <a href="https://facebook.com/bloggyofficial" target="_blank" title="Facebook" class="hover:text-blue-600">
                  <img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" alt="Facebook" class="w-6 h-6">
                   </a>
                              <a href="https://instagram.com/bloggyofficial" target="_blank" title="Instagram" class="hover:text-pink-500">
               <img src="https://cdn-icons-png.flaticon.com/512/733/733558.png" alt="Instagram" class="w-6 h-6">
                </a>
                <a href="mailto:hello@bloggy.com" title="Email">
                  <img src="https://cdn-icons-png.flaticon.com/512/732/732200.png" alt="Email" class="w-6 h-6">
                </a>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
